<bpel:process name="WS_invocar"
         targetNamespace="http://invoke.bpel.mtis/"
         suppressJoinFailure="yes"
         xmlns:tns="http://invoke.bpel.mtis/"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns="http://www.example.org/WS_echo/">

    <!-- Import the client WSDL -->
    <bpel:import namespace="http://www.example.org/WS_echo/" location="WS_echo.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="WS_invocarArtifacts.wsdl" namespace="http://invoke.bpel.mtis/" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:WS_invocar"
                     myRole="WS_invocarProvider"
                     />
        <bpel:partnerLink name="echoPL" partnerLinkType="tns:echoPLN" partnerRole="echoRole"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:WS_invocarRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:WS_invocarResponseMessage"/>
        <bpel:variable name="echoPLResponse" messageType="ns:echoResponse"></bpel:variable>
        <bpel:variable name="echoPLRequest" messageType="ns:echoRequest"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in WS_invocar.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:WS_invocar"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        
        <bpel:assign validate="no" name="asignarEntrada">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:echo xmlns:tns="http://www.example.org/WS_echo/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <in>in</in>
</tns:echo>
</bpel:literal></bpel:from>
                <bpel:to variable="echoPLRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="echoPLRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[in]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="invocarecho" partnerLink="echoPL" operation="echo" portType="ns:WS_echo" inputVariable="echoPLRequest" outputVariable="echoPLResponse"></bpel:invoke>
        <bpel:assign validate="no" name="asignarSalida">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:WS_invocarResponse xmlns:tns="http://invoke.bpel.mtis/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:WS_invocarResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="parameters" variable="echoPLResponse">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[out]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:WS_invocar"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

